# ============================================
# Backend Environment Configuration
# ============================================
# Copia este archivo a .env y rellena los valores reales.
# NUNCA subas .env al repositorio (ya está en .gitignore).

# ============================================
# Database (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=
DB_NAME=lama_db
DB_SSL=0

# ============================================
# Email Provider (Elige uno)
# ============================================

# Opción A) SMTP (Office 365) - Recomendado para producción con buzón corporativo
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=gerencia@fundacionlamamedellin.org
SMTP_PASS=FLM902007705-8
SMTP_FROM=gerencia@fundacionlamamedellin.org

# Opción B) Azure Communication Services Email
# AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://....communication.azure.com/;accesskey=...
# EMAIL_SENDER_ADDRESS=no-reply@fundacionlama.org

# ============================================
# Email Recipients
# ============================================
INSCRIPTIONS_RECEIVER=gerencia@fundacionlamamedellin.org

# ============================================
# Azure Storage (Blob)
# ============================================
AZURE_STORAGE_CONNECTION_STRING=

# ============================================
# Microsoft Entra ID Multi-Tenant Auth
# ============================================
MULTI_TENANT=true
ENTRA_TENANT_ID=95bb5dd0-a2fa-4336-9db4-fee9c5cbe8ae
ENTRA_CLIENT_ID=
ENTRA_CLIENT_SECRET=
ALLOWED_EMAIL_DOMAIN=fundacionlamamedellin.org

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=lama-secret-key-2024-change-in-production
JWT_EXPIRES_IN=24h

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# Server Configuration
# ============================================
PORT=8080
NODE_ENV=development

# ============================================
# Feature Flags
# ============================================
ENABLE_SWAGGER=0
DISABLE_DB=0
FEATURE_EMAIL_REQUIRED=false
FEATURE_BLOB_REQUIRED=false
