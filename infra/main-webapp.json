{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "15662841159416345512"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "webAppName": {
      "type": "string"
    },
    "planName": {
      "type": "string"
    },
    "planSkuName": {
      "type": "string",
      "defaultValue": "P1v2"
    },
    "postgresServerName": {
      "type": "string"
    },
    "postgresAdminUser": {
      "type": "string",
      "defaultValue": "pgadmin"
    },
    "postgresAdminPassword": {
      "type": "securestring"
    },
    "postgresVersion": {
      "type": "string",
      "defaultValue": "16"
    },
    "postgresTier": {
      "type": "string",
      "defaultValue": "Burstable"
    },
    "postgresSkuName": {
      "type": "string",
      "defaultValue": "Standard_B1ms"
    },
    "postgresStorageMb": {
      "type": "int",
      "defaultValue": 32768
    },
    "keyVaultName": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "insightsName": {
      "type": "string"
    },
    "appInsightsWorkspaceId": {
      "type": "string",
      "defaultValue": ""
    },
    "frontendUrl": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "URL del frontend para CORS (ej: https://app.fundacionlamamedellin.org)"
      }
    },
    "enableHealthcheck": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Habilitar healthcheck automático en App Service mediante WEBSITE_HEALTHCHECK_URL"
      }
    },
    "dbPassSecretUri": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "URI del secreto en Key Vault para la contraseña de la base (DB_PASS). Si vacío no se agrega."
      }
    }
  },
  "variables": {
    "postgresDbName": "lama_db",
    "webAppNodeFx": "NODE|24-lts",
    "appSettings": [
      {
        "name": "PORT",
        "value": "8080"
      },
      {
        "name": "NODE_ENV",
        "value": "production"
      },
      {
        "name": "DB_HOST",
        "value": "[format('{0}.postgres.database.azure.com', parameters('postgresServerName'))]"
      },
      {
        "name": "DB_PORT",
        "value": "5432"
      },
      {
        "name": "DB_USER",
        "value": "[format('{0}@{1}', parameters('postgresAdminUser'), parameters('postgresServerName'))]"
      },
      {
        "name": "DB_NAME",
        "value": "[variables('postgresDbName')]"
      },
      {
        "name": "KEY_VAULT_NAME",
        "value": "[parameters('keyVaultName')]"
      },
      {
        "name": "DISABLE_DB",
        "value": "0"
      },
      {
        "name": "FRONTEND_URL",
        "value": "[if(empty(parameters('frontendUrl')), 'http://localhost:5173', parameters('frontendUrl'))]"
      },
      {
        "name": "WEBSITE_HEALTHCHECK_URL",
        "value": "[if(parameters('enableHealthcheck'), '/health', '')]"
      },
      {
        "name": "DB_PASS",
        "value": "[if(empty(parameters('dbPassSecretUri')), 'SET_KEYVAULT_SECRET_URI', format('@Microsoft.KeyVault(SecretUri={0})', parameters('dbPassSecretUri')))]"
      }
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-12-01",
      "name": "[parameters('planName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('planSkuName')]",
        "tier": "[if(equals(parameters('planSkuName'), 'B1'), 'Basic', 'PremiumV2')]",
        "size": "[parameters('planSkuName')]",
        "capacity": 1
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers",
      "apiVersion": "2023-03-01-preview",
      "name": "[parameters('postgresServerName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('postgresSkuName')]",
        "tier": "[parameters('postgresTier')]"
      },
      "properties": {
        "administratorLogin": "[parameters('postgresAdminUser')]",
        "administratorLoginPassword": "[parameters('postgresAdminPassword')]",
        "version": "[parameters('postgresVersion')]",
        "storage": {
          "storageSizeGB": "[int(div(parameters('postgresStorageMb'), 1024))]"
        },
        "backup": {
          "backupRetentionDays": 7,
          "geoRedundantBackup": "Disabled"
        },
        "highAvailability": {
          "mode": "Disabled"
        },
        "maintenanceWindow": {
          "customWindow": "Disabled"
        },
        "availabilityZone": "1"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-07-01",
      "name": "[parameters('keyVaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "enablePurgeProtection": true,
        "enableSoftDelete": true,
        "accessPolicies": []
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[parameters('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "allowBlobPublicAccess": false,
        "minimumTlsVersion": "TLS1_2",
        "supportsHttpsTrafficOnly": true,
        "accessTier": "Hot"
      }
    },
    {
      "condition": "[empty(parameters('appInsightsWorkspaceId'))]",
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[parameters('insightsName')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-12-01",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('planName'))]",
        "siteConfig": {
          "linuxFxVersion": "[variables('webAppNodeFx')]",
          "appSettings": "[variables('appSettings')]",
          "alwaysOn": true,
          "http20Enabled": true,
          "ftpsState": "Disabled"
        },
        "httpsOnly": true
      },
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', parameters('postgresServerName'))]",
        "[resourceId('Microsoft.Web/serverfarms', parameters('planName'))]"
      ]
    }
  ],
  "outputs": {
    "webAppUrl": {
      "type": "string",
      "value": "[format('https://{0}.azurewebsites.net', parameters('webAppName'))]"
    },
    "postgresFqdn": {
      "type": "string",
      "value": "[format('{0}.postgres.database.azure.com', parameters('postgresServerName'))]"
    },
    "keyVaultUri": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName')), '2023-07-01').vaultUri]"
    },
    "insightsKey": {
      "type": "string",
      "value": ""
    }
  }
}