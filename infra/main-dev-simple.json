{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "9348530661450711256"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Ubicaci√≥n de los recursos"
      }
    },
    "environment": {
      "type": "string",
      "metadata": {
        "description": "Ambiente (dev, staging, prod)"
      }
    },
    "projectName": {
      "type": "string",
      "metadata": {
        "description": "Nombre del proyecto"
      }
    },
    "postgresAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin de PostgreSQL"
      }
    },
    "jwtSecret": {
      "type": "securestring",
      "metadata": {
        "description": "JWT Secret"
      }
    },
    "frontendUrl": {
      "type": "string",
      "metadata": {
        "description": "URL del frontend"
      }
    }
  },
  "variables": {
    "resourcePrefix": "[format('{0}-{1}', parameters('projectName'), parameters('environment'))]",
    "storageAccountName": "[replace(format('{0}storage', variables('resourcePrefix')), '-', '')]"
  },
  "resources": [
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers",
      "apiVersion": "2023-03-01-preview",
      "name": "[format('{0}-pg', variables('resourcePrefix'))]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_B1ms",
        "tier": "Burstable"
      },
      "properties": {
        "administratorLogin": "lamadmin",
        "administratorLoginPassword": "[parameters('postgresAdminPassword')]",
        "version": "15",
        "storage": {
          "storageSizeGB": 32
        },
        "backup": {
          "backupRetentionDays": 7,
          "geoRedundantBackup": "Disabled"
        },
        "highAvailability": {
          "mode": "Disabled"
        }
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers/firewallRules",
      "apiVersion": "2023-03-01-preview",
      "name": "[format('{0}/{1}', format('{0}-pg', variables('resourcePrefix')), 'AllowAzureServices')]",
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      },
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', format('{0}-pg', variables('resourcePrefix')))]"
      ]
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers/firewallRules",
      "apiVersion": "2023-03-01-preview",
      "name": "[format('{0}/{1}', format('{0}-pg', variables('resourcePrefix')), 'AllowAll')]",
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "255.255.255.255"
      },
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', format('{0}-pg', variables('resourcePrefix')))]"
      ]
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers/databases",
      "apiVersion": "2023-03-01-preview",
      "name": "[format('{0}/{1}', format('{0}-pg', variables('resourcePrefix')), 'lamadb')]",
      "properties": {
        "charset": "UTF8",
        "collation": "en_US.utf8"
      },
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', format('{0}-pg', variables('resourcePrefix')))]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot",
        "allowBlobPublicAccess": false,
        "supportsHttpsTrafficOnly": true
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}-plan', variables('resourcePrefix'))]",
      "location": "[parameters('location')]",
      "kind": "linux",
      "sku": {
        "name": "B1",
        "tier": "Basic"
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}-backend', variables('resourcePrefix'))]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', format('{0}-plan', variables('resourcePrefix')))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "NODE|20-lts",
          "alwaysOn": true,
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "http20Enabled": true,
          "appSettings": [
            {
              "name": "NODE_ENV",
              "value": "production"
            },
            {
              "name": "PORT",
              "value": "8080"
            },
            {
              "name": "WEBSITES_PORT",
              "value": "8080"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "1"
            },
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "false"
            },
            {
              "name": "ENABLE_ORYX_BUILD",
              "value": "false"
            },
            {
              "name": "DB_HOST",
              "value": "[reference(resourceId('Microsoft.DBforPostgreSQL/flexibleServers', format('{0}-pg', variables('resourcePrefix'))), '2023-03-01-preview').fullyQualifiedDomainName]"
            },
            {
              "name": "DB_PORT",
              "value": "5432"
            },
            {
              "name": "DB_USERNAME",
              "value": "lamadmin"
            },
            {
              "name": "DB_PASSWORD",
              "value": "[parameters('postgresAdminPassword')]"
            },
            {
              "name": "DB_DATABASE",
              "value": "lamadb"
            },
            {
              "name": "DB_SSL",
              "value": "true"
            },
            {
              "name": "JWT_SECRET",
              "value": "[parameters('jwtSecret')]"
            },
            {
              "name": "JWT_EXPIRATION",
              "value": "7d"
            },
            {
              "name": "FRONTEND_URL",
              "value": "[parameters('frontendUrl')]"
            },
            {
              "name": "AZURE_STORAGE_CONNECTION_STRING",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};AccountKey={1};EndpointSuffix=core.windows.net', variables('storageAccountName'), listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-01-01').keys[0].value)]"
            },
            {
              "name": "AZURE_STORAGE_CONTAINER_NAME",
              "value": "uploads"
            },
            {
              "name": "FEATURE_BLOB_REQUIRED",
              "value": "false"
            },
            {
              "name": "FEATURE_EMAIL_REQUIRED",
              "value": "false"
            },
            {
              "name": "ENABLE_SWAGGER",
              "value": "0"
            },
            {
              "name": "WEBSITE_HEALTHCHECK_MAXPINGFAILURES",
              "value": "10"
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', format('{0}-plan', variables('resourcePrefix')))]",
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', format('{0}-pg', variables('resourcePrefix')))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}/{1}', format('{0}-backend', variables('resourcePrefix')), 'web')]",
      "properties": {
        "healthCheckPath": "/health"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', format('{0}-backend', variables('resourcePrefix')))]"
      ]
    }
  ],
  "outputs": {
    "webAppName": {
      "type": "string",
      "value": "[format('{0}-backend', variables('resourcePrefix'))]"
    },
    "webAppUrl": {
      "type": "string",
      "value": "[format('https://{0}', reference(resourceId('Microsoft.Web/sites', format('{0}-backend', variables('resourcePrefix'))), '2023-01-01').defaultHostName)]"
    },
    "postgresHost": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.DBforPostgreSQL/flexibleServers', format('{0}-pg', variables('resourcePrefix'))), '2023-03-01-preview').fullyQualifiedDomainName]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    }
  }
}