# Variables de entorno para Backend Express
# Renombra este archivo a .env y ajusta valores

NODE_ENV=development
PORT=8080

# Base de datos PostgreSQL
DATABASE_URL="postgresql://usuario:password@localhost:5432/lama_db?schema=public"

# JWT
JWT_ACCESS_SECRET="cambia-esta-clave-super-secreta"
JWT_REFRESH_SECRET="cambia-esta-clave-de-refresh"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Email (Nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=mailer@example.com
SMTP_PASS=password
SMTP_FROM="Fundación L.A.M.A. Medellín <no-reply@fundacionlamamedellin.org>"
